package Test

type T1 {
  x optional Integer
  y optional Integer
  z          Integer
}

checks T1 {
  x != null implies y == x, fatal "potato"
  y != null implies x > 1, warning "potato"
}

type T2 {
  x Integer
}

checks T2 {
  x > 1, fatal "must be positive", x
  x != 0, warning "potato"
}

type T3 {
  x optional Boolean
  y          Boolean
}

checks T3 {
  x, "potato"
  y, "potato"
}

enum Colour { Red Green Blue }

type T4 {
  a Colour
  b Colour
  c Colour
  d Colour
  x optional Boolean
}

checks T4 {
  a != b and a != c and a != d, fatal "potato"
  b != c, fatal "potato"
  c != d, fatal "potato"
  d != a, fatal "potato"
  x, "wibble"
}
